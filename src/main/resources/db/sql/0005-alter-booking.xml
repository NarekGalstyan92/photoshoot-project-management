<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="modify-booking-table-add-dates" author="ngalstyan">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="booking" columnName="booking_date"/>
            </not>

        </preConditions>

        <addColumn tableName="booking">
            <column name="booking_date" type="datetime"/>


        </addColumn>


        <addForeignKeyConstraint baseTableName="booking"
                                 baseColumnNames="event_category_id"
                                 constraintName="fk_booking_event_category"
                                 referencedColumnNames="id"
                                 referencedTableName="event_category"/>
    </changeSet>
</databaseChangeLog>
